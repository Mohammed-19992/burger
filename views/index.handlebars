<h1>Eat-Da-Burger!</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col s8">
        {{#each burgers}}
          {{#unless this.devoured}}
            <div class="row">
              <div class="burgerName">
                  <div class='burgerAvailable'>{{this.name}}</div>
              </div>

              <div class="customerEats">
                <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                  <input type="text" id="clientName" name="clientName" placeholder="TYPE YOUR NAME">
                  <button type="submit">Devour</button>
                </form>
              </div>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s4">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.name}} (devoured by {{this.Customer.name}})
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>ADD YOUR BURGER</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="name" placeholder="Uber Delicious Burger">
      <button type="submit" class="addBurgerButton">ADD</button>
    </form>
  </div>
</div>
